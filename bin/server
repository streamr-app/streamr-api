#!/bin/bash

if [ ! -f ".env" ] ; then
  echo "You need a .env file to run the server."
  exit 1
fi

# Ensure dependencies are up to date
mix deps.get

# Use the environment vars from .env
source .env

# Ensure db is up to date
mix ecto.migrate

if [ "$1" == "-i" ] ; then
  iex -S mix phoenix.server
else
  mix phoenix.server
fi
